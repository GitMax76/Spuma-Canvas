    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            const buttons = document.querySelectorAll('.nav-button');
            const sections = document.querySelectorAll('.content-section');
            const chartCanvas = document.getElementById('ciaoChart');
            const audio = document.getElementById('theme-audio');
            const musicToggle = document.getElementById('music-toggle');
            const musicIcon = document.getElementById('music-icon');

            let myChart;
            
            // --- AUDIO LOGIC ---
            audio.volume = 0.4; 

            function updateMusicIcon(playing) {
                if (playing) {
                    musicIcon.textContent = 'üõµ'; 
                    musicToggle.classList.add('music-playing');
                } else {
                    musicIcon.textContent = 'üîá';
                    musicToggle.classList.remove('music-playing');
                }
            }

            const safePlay = () => {
                const playPromise = audio.play();
                if (playPromise !== undefined) {
                    playPromise.then(() => updateMusicIcon(true))
                    .catch(error => {
                        console.log("Autoplay blocked:", error);
                        updateMusicIcon(false);
                    });
                }
            };

            const safePause = () => {
                audio.pause();
                updateMusicIcon(false);
            };

            musicToggle.addEventListener('click', (e) => {
                e.stopPropagation();
                if (audio.paused) safePlay();
                else safePause();
            });

            // Autoplay attempt with fallback
            const autoPlayPromise = audio.play();
            if (autoPlayPromise !== undefined) {
                autoPlayPromise.then(() => updateMusicIcon(true)).catch(() => {
                    updateMusicIcon(false);
                    const playOnInteraction = () => {
                        safePlay();
                        document.removeEventListener('click', playOnInteraction);
                    };
                    document.addEventListener('click', playOnInteraction, { once: true });
                });
            }

            // --- NAVIGATION LOGIC ---
            function initNavigation() {
                buttons.forEach(button => {
                    button.addEventListener('click', () => {
                        const targetId = button.dataset.target;
                        sections.forEach(section => section.classList.add('hidden'));
                        const targetSection = document.getElementById(targetId);
                        if (targetSection) targetSection.classList.remove('hidden');
                        
                        buttons.forEach(btn => btn.classList.remove('active'));
                        if (!button.dataset.target.startsWith('speech')) {
                            button.classList.add('active');
                        }
                        
                        if (targetId === 'stats' && !myChart) {
                            initChart();
                        }
                    });
                });
                
                // Set default tab to GENESI
                const firstNavButton = document.querySelector('.nav-button[data-target="genesi"]');
                if (firstNavButton) firstNavButton.click();
            }

            function initChart() {
                if (chartCanvas) {
                    const ctx = chartCanvas.getContext('2d');
                    
                    const data = {
                        labels: ['Tragitto Casa-Scuola', 'Impennate al parchetto', 'Spinto a mano (Benzina finita)', 'Fermo in Garage (Punizione)'],
                        datasets: [{
                            label: 'Ciclo di Vita del Ciao',
                            data: [40, 30, 20, 10],
                            backgroundColor: [
                                '#FF5722', // Orange
                                '#D32F2F', // Red
                                '#212121', // Black
                                '#FFF8E1'  // Cream
                            ],
                            borderColor: '#000',
                            borderWidth: 3,
                            hoverOffset: 10
                        }]
                    };

                    const config = {
                        type: 'doughnut',
                        data: data,
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        font: { family: 'DM Sans', size: 14 },
                                        color: '#212121'
                                    }
                                },
                                tooltip: {
                                    titleFont: { family: 'Shrikhand' },
                                    bodyFont: { family: 'DM Sans' }
                                }
                            }
                        }
                    };

                    myChart = new Chart(ctx, config);
                }
            }

            initNavigation();
        });
    </script>
</body>
</html>
